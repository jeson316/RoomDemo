<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:id="@+id/vertical_guideline"
            app:layout_constraintGuide_percent="0.5"
            android:background="@android:color/background_dark"
            android:layout_width="1dp"
            android:layout_height="1dp"/>

    <android.support.v7.widget.CardView
            android:id="@+id/ll_left"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            app:layout_constraintRight_toLeftOf="@id/vertical_guideline"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"
            android:outlineSpotShadowColor="@android:color/darker_gray"
            android:layout_marginRight="8dp">

        <LinearLayout
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toLeftOf="@id/vertical_guideline"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Hello World! aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/but_open_room_activity"
                    android:text="WorDemoActivity"
                    android:textAllCaps="false"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/but_open_storage_activity"
                    android:text="storage"
                    />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/but_open_service_activity"
                    android:text="service"
                    />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/but_open_layer_list_activity"
                    android:text="layerlist"
                    />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:id="@+id/ll_right"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@id/vertical_guideline"
            app:layout_constraintHorizontal_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/vertical_guideline"
            android:layout_marginLeft="8dp"
            android:elevation="8dp"
            android:outlineSpotShadowColor="@android:color/darker_gray"
            >

        <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                >

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    />

            <ImageView
                    android:src="@drawable/mm_bobo_large_02"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
